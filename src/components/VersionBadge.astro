---
import versions from "../../data/versions.json";

interface Props {
  sdk: keyof typeof versions;
}

const { sdk } = Astro.props;
const info = versions[sdk];
---

{info && (
  <a href={info.registryUrl} class="version-badge" target="_blank" rel="noopener noreferrer">
    <span class="badge-name">{info.name}</span>
    <span class="badge-version">v{info.version}</span>
  </a>
)}

<style>
  .version-badge {
    display: inline-flex;
    align-items: center;
    font-size: 0.85rem;
    border-radius: 6px;
    overflow: hidden;
    text-decoration: none;
    border: 1px solid var(--sl-color-gray-5);
    line-height: 1;
  }
  .badge-name {
    padding: 0.25rem 0.5rem;
    background: var(--sl-color-gray-6);
    color: var(--sl-color-white);
    font-weight: 600;
  }
  .badge-version {
    padding: 0.25rem 0.5rem;
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
    font-weight: 600;
  }
</style>
